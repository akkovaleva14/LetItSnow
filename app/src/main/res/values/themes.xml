<resources>
    <!-- Base application theme. -->
    <style name="Theme.LetItSnow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_darkest</item>
        <item name="colorPrimaryDark">@color/blue_extremely_light</item>
        <item name="colorPrimaryVariant">@color/blue_darkest</item>
        <item name="colorOnPrimary">@color/blue_darkest</item>
        <item name="colorAccent">@color/blue_darkest</item>
        <item name="android:textColorPrimary">@color/blue_darkest</item>
        <item name="android:textColorSecondary">@color/blue_darkest</item>
        <item name="android:textColorTertiary">@color/blue_darkest</item>
        <item name="android:textColorPrimaryInverse">@color/blue_darkest</item>
        <item name="android:textColorSecondaryInverse">@color/blue_darkest</item>
        <item name="android:textColorTertiaryInverse">@color/blue_darkest</item>
        <item name="colorControlActivated">@color/blue_darkest</item>
        <item name="colorControlNormal">@color/blue_lightest</item>
        <item name="colorControlHighlight">@color/blue_darkest</item>
        <item name="colorButtonNormal">@color/blue_lightest</item>
        <item name="colorSwitchThumbNormal">@color/blue_lightest</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_darkest</item>
        <item name="colorSecondaryVariant">@color/blue_darkest</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LetItSnow.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.LetItSnow.AppWidgetContainer" parent="Theme.LetItSnow.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
        <item name="appWidgetBackgroundColor">@color/blue_extremely_light</item>
        <item name="appWidgetTextColor">@color/blue_extremely_dark</item>
        <item name="colorControlNormal">@color/blue_darkest</item>


    </style>


    <style name="Theme.LetItSnow.ActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.LetItSnow.ActionBarStyle</item>
        <item name="android:actionMenuTextColor">@color/blue_darkest</item>
    </style>

    <style name="Theme.LetItSnow.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/Theme.LetItSnow.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/blue_darkest</item>
    </style>

    <style name="Theme.LetItSnow.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blue_darkest</item>
    </style>

    <style name="Theme.LetItSnow.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_darkest</item>
    </style>



    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/blue_darkest</item>
    </style>

</resources>