<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    style="@style/Widget.LetItSnow.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_600"
    android:theme="@style/Theme.LetItSnow.AppWidgetContainer">

    <TextView
        android:id="@+id/appwidgetTown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:background="@color/light_blue_200"
        android:contentDescription="@string/town"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        tools:text="@string/town" />

    <TextView
        android:id="@+id/appwidgetTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@color/light_blue_200"
        android:contentDescription="@string/temperature"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        tools:text="@string/temperature" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:background="@drawable/updatearrow"
        android:backgroundTint="@color/light_blue_50" />

</RelativeLayout>