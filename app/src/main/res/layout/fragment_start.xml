<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="data"
            type="com.application.letitsnow.ui.start.StartViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorPrimaryDark"
        tools:context=".ui.start.StartFragment">

        <TextView
            android:id="@+id/town"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="32dp"
            android:layout_weight="1"
            android:text="@{data.town}"
            android:textSize="32sp"
            tools:text="@string/town"
            tools:textColor="@color/light_blue_900" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="32dp"
            android:layout_weight="5"
            android:text="@{data.temp}"
            android:textSize="32sp"
            tools:text="@string/temperature"
            tools:textColor="@color/light_blue_900" />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="32dp"
            android:layout_weight="0"
            android:background="@drawable/settings"
            tools:textColor="@color/light_blue_900" />

    </LinearLayout>
</layout>